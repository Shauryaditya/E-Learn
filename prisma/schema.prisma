generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Course {
  id          String  @id @default(uuid())
  userId      String
  title       String  @db.Text
  description String? @db.Text
  imageUrl    String? @db.Text
  price       Float?
  isPublished Boolean @default(false)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  chapters    Chapter[]
  attachments Attachment[]
  purchases   Purchase[]
  goals       Goal[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  RazorpayOrder RazorpayOrder[]

  @@index([categoryId])
}



model Category {
  id      String   @id @default(uuid())
  name    String   @unique
  courses Course[]
  testSeries TestSeries[]
}

model Attachment {
  id   String @id @default(uuid())
  name String
  url  String @db.Text

  courseId String?
  course   Course? @relation(fields: [courseId], references: [id], onDelete: Cascade)

  chapterId String? // New field to relate attachments to chapters
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  testChapterId String?
  testChapter   TestChapter? @relation(fields: [testChapterId], references: [id], onDelete: Cascade)
  
  @@index([testChapterId])

  @@index([courseId])
  @@index([chapterId]) // Index for chapterId
}

model Chapter {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  videoUrl    String?  @db.Text
  position    Int
  isPublished Boolean  @default(false)
  isFree      Boolean  @default(false)
  muxData     MuxData?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress UserProgress[]
  attachments  Attachment[] // New relation to manage attachments for chapters

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model MuxData {
  id         String  @id @default(uuid())
  assetId    String
  playbackId String?

  chapterId String  @unique
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model UserProgress {
  id     String @id @default(uuid())
  userId String

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  isCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId])
}

model Purchase {
  id     String @id @default(uuid())
  userId String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@unique([userId, courseId])
  @@index([courseId])
}

model RazorpayCustomer {
  id                 String @id @default(uuid())
  userId             String @unique
  razorpayCustomerId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RazorpayOrder {
  id              String  @id @default(uuid())
  userId          String
  razorpayOrderId String  @unique
  amount          Float
  currency        String  @default("INR")
  status          String
  receipt         String? // Nullable field

  // Add the courseId field to link RazorpayOrder to Course
  courseId String // Reference to the Course
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([courseId]) // Manually add an index for courseId
}

// ============================================
// TEST SERIES MODELS
// ============================================

model TestSeries {
  id          String  @id @default(uuid())
  userId      String  // Teacher who created this
  title       String  @db.Text
  description String? @db.Text
  imageUrl    String? @db.Text
  price       Float?
  isPublished Boolean @default(false)
  
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  
  testChapters       TestChapter[]
  testSeriesPurchase TestSeriesPurchase[]
  goals              Goal[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([categoryId])
  @@index([userId])
}

model TestChapter {
  id          String  @id @default(uuid())
  title       String  // e.g., "Thermodynamics", "Organic Chemistry"
  description String? @db.Text
  position    Int
  isPublished Boolean @default(false)
  
  testSeriesId String
  testSeries   TestSeries @relation(fields: [testSeriesId], references: [id], onDelete: Cascade)
  
  tests Test[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  attachments  Attachment[]
  submissions   TestSubmission[]
  
  @@index([testSeriesId])
}

model Test {
  id          String  @id @default(uuid())
  title       String
  description String? @db.Text
  duration    Int
  totalMarks  Int
  passingMarks Int?
  position    Int
  isPublished Boolean @default(false)
  isFree      Boolean @default(false)

  testMode        TestMode @default(OBJECTIVE)

  testChapterId String
  testChapter   TestChapter @relation(fields: [testChapterId], references: [id], onDelete: Cascade)

  questions     Question[]
  testAttempts  TestAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  NUMERICAL
  TRUE_FALSE
}

model TestSubmission {
  id            String @id @default(uuid())
  userId        String

  testChapterId String
  testChapter   TestChapter @relation(fields: [testChapterId], references: [id], onDelete: Cascade)

  pdfUrl        String @db.Text

  fileName      String?
  fileSize      Int?      // in bytes
  attemptNo     Int       @default(1)

  marksAwarded  Float?
  feedback      String?   @db.Text
  reviewedAt    DateTime?
  reviewedBy    String?   // teacher userId (optional but smart)

  annotatedPdfUrl String?   @db.Text
  status        SubmissionStatus @default(SUBMITTED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([testChapterId])
  @@index([userId])
}

enum SubmissionStatus {
  SUBMITTED
  REVIEWED
  NEEDS_REVISION
}
model Question {
  id            String       @id @default(uuid())
  questionText  String       @db.Text
  questionType  QuestionType @default(SINGLE_CHOICE)
  marks         Float
  negativeMarks Float        @default(0)
  position      Int
  explanation   String?      @db.Text
  imageUrl      String?      @db.Text
  
  testId String
  test   Test   @relation(fields: [testId], references: [id], onDelete: Cascade)
  
  options QuestionOption[]
  answers Answer[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([testId])
}

model QuestionOption {
  id         String  @id @default(uuid())
  optionText String  @db.Text
  isCorrect  Boolean @default(false)
  position   Int
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([questionId])
}

model TestAttempt {
  id          String   @id @default(uuid())
  userId      String
  score       Float?
  totalMarks  Int
  percentage  Float?
  isPassed    Boolean?
  isCompleted Boolean  @default(false)
  startedAt   DateTime @default(now())
  completedAt DateTime?
  
  testId String
  test   Test   @relation(fields: [testId], references: [id], onDelete: Cascade)
  
  answers Answer[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, testId])
  @@index([testId])
  @@index([userId])
}

model Answer {
  id             String   @id @default(uuid())
  selectedAnswer String?  @db.Text // For single/multiple choice, store option IDs; for numerical, store the value
  isCorrect      Boolean?
  marksAwarded   Float?
  
  testAttemptId String
  testAttempt   TestAttempt @relation(fields: [testAttemptId], references: [id], onDelete: Cascade)
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([testAttemptId, questionId])
  @@index([testAttemptId])
  @@index([questionId])
}

model TestSeriesPurchase {
  id     String @id @default(uuid())
  userId String
  
  testSeriesId String
  testSeries   TestSeries @relation(fields: [testSeriesId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, testSeriesId])
  @@index([testSeriesId])
  @@index([userId])
}


enum TestMode {
  OBJECTIVE
  DESCRIPTIVE
}

model Goal {
  id          String   @id @default(uuid())
  title       String   @db.Text
  description String?  @db.Text
  dueDate     DateTime
  isCompleted Boolean  @default(false)
  
  // Student this goal is assigned to
  studentId   String
  
  // Teacher who created this goal
  teacherId   String
  
  // Either courseId OR testSeriesId will be set (not both)
  courseId      String?
  course        Course?      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  testSeriesId  String?
  testSeries    TestSeries?  @relation(fields: [testSeriesId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([studentId])
  @@index([teacherId])
  @@index([courseId])
  @@index([testSeriesId])
  @@index([dueDate])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String   @db.Text
  keys      Json     // Store p256dh and auth keys
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
